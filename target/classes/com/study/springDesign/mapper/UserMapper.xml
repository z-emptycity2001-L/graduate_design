<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.springDesign.mapper.UserMapper">
    <insert id="insertUser">
        insert into user(id,nickname,password,phone,sex,avatar,address,wechat_name,create_time,update_time)
        values(#{id},#{nickname},#{password},#{phone},#{sex},#{avatar},#{address},#{wechatName},#{createTime},#{updateTime});
    </insert>

    <select id="countUser">
        select count(*) from user;
    </select>
    <select id="selectUserByNicknameAndPassword" resultType="user">
        select * from user where nickname=#{nickname}
    </select>
</mapper>












